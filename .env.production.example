# VibeScan Production Environment Variables
# 이 파일을 .env.production으로 복사하고 실제 값을 입력하세요
# cp .env.production.example .env.production

# ===== 도메인 및 SSL 설정 =====
DOMAIN=vibescan.kr
EMAIL=your-email@example.com

# ===== 데이터베이스 설정 =====
DATABASE_HOST=postgres
DATABASE_PORT=5432
DATABASE_USER=vibescan
DATABASE_PASSWORD=your_strong_database_password_here
DATABASE_NAME=vibescan

# ===== Redis 설정 =====
REDIS_HOST=redis
REDIS_PORT=6379

# ===== JWT 인증 =====
# openssl rand -base64 32 명령으로 생성
JWT_SECRET=your_jwt_secret_key_here
JWT_REFRESH_SECRET=your_jwt_refresh_secret_key_here
JWT_EXPIRES_IN=7d

# ===== OAuth 소셜 로그인 =====
# Google OAuth
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_CALLBACK_URL=https://${DOMAIN}/api/auth/google/callback

# Kakao OAuth
KAKAO_CLIENT_ID=your_kakao_rest_api_key
KAKAO_CLIENT_SECRET=your_kakao_client_secret
KAKAO_CALLBACK_URL=https://${DOMAIN}/api/auth/kakao/callback

# ===== AI API Keys =====
# Google Gemini AI
GEMINI_API_KEY=your_gemini_api_key

# OpenAI (optional)
OPENAI_API_KEY=your_openai_api_key

# Anthropic Claude (optional)
ANTHROPIC_API_KEY=your_anthropic_api_key

# ===== 결제 시스템 (TossPayments) =====
# 프로덕션 키로 변경 필요
TOSS_SECRET_KEY=your_toss_secret_key
TOSS_CLIENT_KEY=your_toss_client_key

# ===== Security Scanners (Docker Images) =====
NUCLEI_IMAGE=projectdiscovery/nuclei:latest
TRIVY_IMAGE=aquasec/trivy:latest
GITLEAKS_IMAGE=zricethezav/gitleaks:latest

# ===== Scanner Containers (Docker Compose) =====
NUCLEI_CONTAINER=vibescan-nuclei
ZAP_CONTAINER=vibescan-zap

# ===== OWASP ZAP Scanner =====
ZAP_API_URL=http://zap:8090
ZAP_AGGRESSIVE_MODE=false

# ===== URLs =====
# Frontend URL (CORS 설정용)
FRONTEND_URL=https://${DOMAIN}

# Frontend API URL (Next.js용)
NEXT_PUBLIC_API_URL=https://${DOMAIN}/api

# ===== API Settings =====
PORT=3000
NODE_ENV=production
